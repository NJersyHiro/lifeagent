generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        String   @id @default(cuid())
  title     String
  dueDate   DateTime?
  createdAt DateTime @default(now())
  completed Boolean  @default(false)
}

model Expense {
  id        String   @id @default(cuid())
  date      DateTime
  item      String
  amount    Int
  category  String
  createdAt DateTime @default(now())
}

model Email {
  id        String   @id @default(cuid())
  messageId String   @unique
  threadId  String
  from      String
  to        String
  subject   String
  body      String?
  snippet   String?
  date      DateTime
  isRead    Boolean  @default(false)
  labels    String?  // JSON string of labels
  createdAt DateTime @default(now())
  replyDrafts ReplyDraft[]
}

model ReplyDraft {
  id        String   @id @default(cuid())
  emailId   String
  email     Email    @relation(fields: [emailId], references: [id])
  content   String
  instruction String? // LLMへの指示
  approved  Boolean  @default(false)
  sent      Boolean  @default(false)
  sentAt    DateTime?
  createdAt DateTime @default(now())
}
